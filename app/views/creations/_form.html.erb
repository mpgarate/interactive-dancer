<button id="save_creation">Save creation</button>

<%= form_for(@creation) do |f| %>
  <% if @creation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@creation.errors.count, "error") %> prohibited this creation from being saved:</h2>

      <ul>
      <% @creation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :slides %><br />
    <%= f.text_area :slides %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :created_time %><br />
    <%= f.datetime_select :created_time %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :id %><br />
    <%= f.number_field :id %>
  </div>
  <div class="field">
    <%= f.label :uploaded_content_group_id %><br />
    <%= f.number_field :uploaded_content_group_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
